<%= form_for @product, url: products_path, html: { multipart: true } do |f| %>
  <div class="field">
  <%= f.label :image %><br>  
  <%= f.file_field :image %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>

    <div class="field">
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity %>
  </div>


  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>