<!-- PRODUCTS INDEX -->
<%= stylesheet_link_tag 'products_index' %>
<div class="container">
    <div class="row">
      <div class="span3">
       
        </div>
            <br />
            
        </div>
      </div>
      <div class="span9">
        <div class="hero-unit">
          <h1 class="">Special Offer</h1>
          <p class="">All the stuff you want! Don't miss out!</p>
        </div>
        <div> 
        <%= paginate @products %> 
        </div>
        <% @products.each do |product| %>
                <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <%= image_tag product.image.url(:thumb) %>
                    <div class="caption">

                        <h3><%= product.title %></h3>
                        <p><%= product.description %></p>
                        <p>
                            <%= button_to "see product detail", product_path(product), method: :get, class: "btn btn-default text-center" %>


                             <%= button_to [:add_to_cart, product] do %>
                             add to cart
                             <% end %>

              


                            </div>
                          
                        </p>
                    </div>
                </div>
                   
            </div>
            <% end %> 
      </div>
    </div>
  </div>