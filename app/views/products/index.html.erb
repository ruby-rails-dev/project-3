<!-- PRODUCTS INDEX -->
<%= stylesheet_link_tag 'products_index' %>
<div class="container">
  <h1 class="SpecialOffer">Special Offer</h1>
  <p class="subHead">All the stuff you want! Don't miss out!</p>


  <%= paginate @products %> 
  <div class="row">
   
    <% @products.each do |product| %>
      <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
          <%= image_tag product.image.url(:thumb) %>
            <div class="caption">
              <h3><%= product.title %></h3>
              
                  <p><%= button_to "see product detail", product_path(product), method: :get, class: "btn btn-default text-center" %>
                    <%= button_to "add to cart", order_product_users_path(product.id), :method => "post" %> </p>
              </div>
            
      </div>             
    </div>
  <% end %> 
</div><!--  END CONTAINER -->


